# Production Configuration for Network Deployment
# Copy this to .env on your NUC

# Server binds to all interfaces (accessible from other devices)
HOST=0.0.0.0
PORT=3001
NODE_ENV=production

# Database
DATABASE_PATH=./db/recipes.db

# Allow requests from any origin (for home network use)
CORS_ORIGIN=*

# Data directory for uploads
DATA_DIR=./data

# Frontend build path (relative to backend directory)
FRONTEND_PATH=../frontend/dist
